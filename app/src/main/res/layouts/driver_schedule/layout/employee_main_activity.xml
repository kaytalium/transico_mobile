<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundDark"
    android:fitsSystemWindows="true"
    tools:context=".EmployeeActivity">

    <include
        layout="@layout/employee_app_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/theme_background_accent"
        app:itemIconTint="@drawable/custom_bottom_sector"
        app:itemTextColor="@drawable/custom_bottom_sector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:labelVisibilityMode="labeled"
        app:layout_behavior="com.transico.codezero.transico.BottomNavigationBehaviour"
        app:menu="@menu/navigation" />

</androidx.constraintlayout.widget.ConstraintLayout>