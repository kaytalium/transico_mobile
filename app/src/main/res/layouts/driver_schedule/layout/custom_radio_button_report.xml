<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:minHeight="70dp"
        android:layout_height="wrap_content"

        android:gravity="center|start"
        android:background="@drawable/custom_radio_button_bg_bottom"
        >

        <TextView
            android:id="@+id/tv_check_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_alignParentTop="true"
            />

        <TextView
            android:id="@+id/tv_group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tv_check_icon"
            android:text="Mechanic Group"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_alignParentTop="true"
           />

        <TextView
            android:id="@+id/tv_group_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tv_check_icon"
            android:text="Anyone from this group can respond"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="-2dp"
            android:textSize="12sp"
            android:layout_below="@id/tv_group_name"
            />
    </RelativeLayout>


</merge>